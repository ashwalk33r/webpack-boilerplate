{
	"include": ["src/**/*"],
	"exclude": ["node_modules"],
	"compilerOptions": {
		"outDir": "./dist/",
		"noImplicitAny": true,
		"sourceMap": true,
		"allowJs": false,
		"module": "es6",
		"target": "es5",
		"moduleResolution": "node",
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true
	}
}
